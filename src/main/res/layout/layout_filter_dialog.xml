<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet_round"
    android:padding="16dp">

    <!-- Thanh tiêu đề và nút đóng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bộ lọc &amp; Sắp xếp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Đóng"
            android:tint="#555555" />
    </LinearLayout>

    <!-- Nội dung chính cuộn được -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sắp xếp -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sắp xếp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinner_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/sort_options"
                android:layout_marginBottom="12dp" />

            <!-- Loại sản phẩm -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại sản phẩm"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vòng tay" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhẫn" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charm" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoa tai" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dây chuyền" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="12dp" />

            <!-- Chất liệu -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chất liệu"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <RadioGroup
                android:id="@+id/radio_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mạ vàng 14k" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bạc" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twotone" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Glass" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="12dp" />

            <!-- Màu sắc -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màu sắc"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="#FFD700"
                    android:layout_margin="4dp"
                    android:contentDescription="Vàng" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="#C0C0C0"
                    android:layout_margin="4dp"
                    android:contentDescription="Bạc" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="#000000"
                    android:layout_margin="4dp"
                    android:contentDescription="Đen" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="#FF69B4"
                    android:layout_margin="4dp"
                    android:contentDescription="Hồng" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút hành động -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lại"
            android:textColor="#E91E63"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Áp dụng"
            android:textStyle="bold"
            android:backgroundTint="#E91E63"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp" />
    </LinearLayout>
</LinearLayout>
