<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Mã đơn -->
        <TextView
            android:id="@+id/tvDetailOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn #30"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginBottom="4dp" />

        <!-- Trạng thái -->
        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: DELIVERING"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9CA3AF"
            android:layout_marginBottom="16dp" />

        <!-- Thông tin khách hàng -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDetailCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên khách hàng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111827" />

                <TextView
                    android:id="@+id/tvDetailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ khách hàng"
                    android:textSize="14sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0123456789"
                    android:textSize="14sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDetailTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.872.000đ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF3B7F"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Gọi khách -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallCustomer"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:text="Gọi khách"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#111827"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_call_white_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <!-- Xem bản đồ -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenMap"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:text="Xem bản đồ"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#111827"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_map_white_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <!-- Chọn ảnh minh chứng -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChooseProof"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:text="Chọn ảnh minh chứng"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#111827"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_photo_white_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <!-- Đã giao thành công -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelivered"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:text="Đã giao thành công"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#10B981"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_check_circle_white_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <!-- Giao thất bại -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFailed"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:text="Giao thất bại"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#EF4444"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_close_circle_white_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <!-- Danh sách sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="Sản phẩm trong đơn:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
