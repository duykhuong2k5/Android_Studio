<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/product_bg"
    android:padding="8dp"
    android:layout_marginEnd="10dp"
    android:elevation="2dp"
    android:gravity="center_horizontal">

    <!-- ⭐ BANNER QUÀ TẶNG -->
    <TextView
        android:id="@+id/tvGiftBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUÀ TẶNG"
        android:background="@drawable/bg_gift"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- ⭐ BANNER COMBO -->
    <TextView
        android:id="@+id/tvComboBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMBO ƯU ĐÃI"
        android:background="@drawable/bg_combo"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- ẢNH SẢN PHẨM -->
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center" />

    <!-- TÊN SẢN PHẨM -->
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textColor="#222"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:gravity="center" />

    <!-- ⭐ MÔ TẢ COMBO (comboRule) -->
    <TextView
        android:id="@+id/tvComboRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mua nhẫn + vòng tay"
        android:textColor="#D81B60"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:gravity="center" />

    <!-- GIÁ MỚI -->
    <TextView
        android:id="@+id/tvDiscountPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.000.000₫"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:layout_gravity="start" />

    <!-- GIÁ CŨ + GIẢM GIÁ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_gravity="start"
        android:layout_marginTop="2dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.000.000₫"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tvDiscountPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-20%"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_discount"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:includeFontPadding="true"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:minHeight="20dp" />
    </LinearLayout>


    <!-- YÊU THÍCH + ĐÃ BÁN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_favorite_border"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tvSoldCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã bán 0"
            android:textSize="12sp"
            android:textColor="#777"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="4dp" />
    </LinearLayout>

</LinearLayout>
