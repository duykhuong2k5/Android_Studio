<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:tint="#000000"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng của bạn"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- MENU NGANG -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutTabs"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- ĐANG XỬ LÝ -->
            <LinearLayout
                android:id="@+id/btnProcessing"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_processing"
                    android:tint="#FF2D87" />

                <TextView
                    android:text="Đang xử lý"
                    android:textSize="14sp"
                    android:textColor="#FF2D87"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Gạch chân tab -->
                <View
                    android:id="@+id/underlineProcessing"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FF2D87"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- ĐANG GIAO -->
            <LinearLayout
                android:id="@+id/btnDelivering"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_shipping"
                    android:tint="#888888" />

                <TextView
                    android:text="Đang giao"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/underlineDelivering"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00000000" />
            </LinearLayout>

            <!-- HOÀN THÀNH -->
            <LinearLayout
                android:id="@+id/btnCompleted"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_completed"
                    android:tint="#888888" />

                <TextView
                    android:text="Hoàn thành"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/underlineCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00000000" />
            </LinearLayout>

            <!-- ĐÃ HỦY -->
            <LinearLayout
                android:id="@+id/btnFailed"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_cancelled"
                    android:tint="#888888" />

                <TextView
                    android:text="Đã hủy"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/underlineFailed"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00000000" />
            </LinearLayout>



        </LinearLayout>
    </HorizontalScrollView>
    <!-- SỔ ĐỊA CHỈ -->
    <LinearLayout
        android:id="@+id/btnAddress"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_address"
            android:tint="#888888" />

        <TextView
            android:text="Sổ địa chỉ"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/underlineAddress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#00000000" />
    </LinearLayout>

    <!-- TIÊU ĐỀ SẢN PHẨM GỢI Ý -->
    <TextView
        android:text="Gợi ý dành cho bạn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- LIST GỢI Ý -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSuggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

</LinearLayout>
