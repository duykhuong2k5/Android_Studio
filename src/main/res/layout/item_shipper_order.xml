<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShipperOrderId"
            android:text="Đơn #123"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvShipperAddress"
            android:text="39 Linh Đông, Thủ Đức"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:textColor="#444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvShipperTotal"
            android:text="Tổng: 2.872.000₫"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:textColor="@color/pink_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvShipperStatus"
            android:text="WAITING_SHIPPER"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Nút Nhận đơn -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAcceptOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nhận đơn"
            android:textAllCaps="false"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
