<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/admin_bg"
    tools:context=".AdminDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Hàng tiêu đề + Đăng xuất -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tvAdminTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Admin Dashboard"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/admin_text_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Đăng xuất"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/admin_logout_text"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/admin_logout_bg" />
        </LinearLayout>

        <!-- Hàng 1: Product + User -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProducts"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_box"
                        android:tint="@color/admin_icon_pink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Product Management"
                        android:textColor="@color/admin_text_white"
                        android:textStyle="bold"
                        android:textSize="19sp" />

                    <!-- ĐẾM SẢN PHẨM -->
                    <TextView
                        android:id="@+id/tvProductCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 products"
                        android:textColor="@color/admin_icon_pink"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUsers"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/admin_icon_pink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="User Management"
                        android:textColor="@color/admin_text_white"
                        android:textStyle="bold"
                        android:textSize="19sp" />

                    <!-- ĐẾM USER -->
                    <TextView
                        android:id="@+id/tvUserCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 users"
                        android:textColor="@color/admin_icon_pink"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Hàng 2: Order + Review -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrders"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_cart"
                        android:tint="@color/admin_icon_pink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Order Management"
                        android:textColor="@color/admin_text_white"
                        android:textStyle="bold"
                        android:textSize="19sp" />

                    <!-- ĐẾM ĐƠN HÀNG -->
                    <TextView
                        android:id="@+id/tvOrderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 orders"
                        android:textColor="@color/admin_icon_pink"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReviews"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_star"
                        android:tint="@color/admin_icon_pink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Review Management"
                        android:textColor="@color/admin_text_white"
                        android:textStyle="bold"
                        android:textSize="19sp" />

                    <!-- ĐẾM REVIEW -->
                    <TextView
                        android:id="@+id/tvReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 reviews"
                        android:textColor="@color/admin_icon_pink"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
        <!-- Hàng 4: Quản lý chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChats"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chat_bubble"
                        android:tint="@color/admin_icon_pink" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý chat hỗ trợ"
                            android:textColor="@color/admin_text_white"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem danh sách khách đang cần tư vấn"
                            android:textColor="@color/admin_text_white"
                            android:textSize="14sp"
                            android:alpha="0.8" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <!-- Hàng 3: Revenue + Back to Home -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRevenue"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_chart"
                        android:tint="@color/admin_icon_pink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Revenue Management"
                        android:textColor="@color/admin_text_white"
                        android:textStyle="bold"
                        android:textSize="19sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBackHome"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/admin_card_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_home"
                        android:tint="@color/admin_home_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Back to Home"
                        android:textColor="@color/admin_text_dark"
                        android:textStyle="bold"
                        android:textSize="19sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="© 2025 Admin Dashboard"
            android:textSize="14sp"
            android:textColor="#9F9F9F"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</ScrollView>
